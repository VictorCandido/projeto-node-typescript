generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  uuid  String @id @default(uuid())
  nome  String
  cpf   String
  books Book[]
}

model Book {
  uuid       String  @id @default(uuid())
  nome       String
  disponivel Boolean @default(true)
  user       User?    @relation(fields: [userUuid], references: [uuid])
  userUuid   String?

  @@index([userUuid])
}
